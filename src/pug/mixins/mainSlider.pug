mixin slider(img, img_number, name, text)
  .main-slider__item
    img(class=`img-slider-${img_number}` src=img alt='Image')
    p #{name}
    p #{text}

mixin slider-reviews(img, name, location, message)
  .main-slider__item
    .slider-revies-info
      img(src=img)
      .slider-reviews-name
        p #{name}
      .slider-reviews-location
        p #{location}
    .slider-reviews-rate
      p 
    .slider-reviews-message
      p #{message}
